extends layout

block content
  div.container
    br
    a(href="/add") Add User
    br
    table(border="1")
      tr
        th Id
        th First Name
        th Last Name
        th Email
        th Action
      each user in users
        tr
          td #{user._id}
          td #{user.firstname}
          td #{user.lastname}
          td #{user.email}
          td
            a(href="/users/editUser/" + user._id) Edit
            <span> | </span>
            a(href="users/deleteUser/" + user._id,
            onclick="return confirm('Are you sure?')") Delete
